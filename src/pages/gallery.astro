---
import Layout from "../layouts/main.astro";
import PageHeading from "../components/page-heading.astro";
---

<Layout title="Gallery | Andrew McKenzie">
  <div class="max-w-[712px] mx-auto px-4 sm:px-6 mt-16 mb-20">
    <PageHeading title="Gallery" description="A visual showcase of my work and inspirations." />
    
    <div class="mt-10 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
      <!-- Gallery Item 1 -->
      <div class="gallery-item overflow-hidden rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-900">
        <img 
          src="/assets/images/projects/ecommerce.png" 
          alt="E-commerce Project" 
          class="w-full h-auto object-cover transition-transform duration-300 hover:scale-105"
        />
        <div class="p-3">
          <h3 class="text-base font-medium text-neutral-800 dark:text-white">E-commerce Project</h3>
          <p class="text-sm text-neutral-600 dark:text-neutral-400">Online store design and implementation</p>
        </div>
      </div>
      
      <!-- Gallery Item 2 -->
      <div class="gallery-item overflow-hidden rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-900">
        <img 
          src="/assets/images/projects/kpi-dashboard.png" 
          alt="KPI Dashboard" 
          class="w-full h-auto object-cover transition-transform duration-300 hover:scale-105"
        />
        <div class="p-3">
          <h3 class="text-base font-medium text-neutral-800 dark:text-white">KPI Dashboard</h3>
          <p class="text-sm text-neutral-600 dark:text-neutral-400">Performance metrics visualization</p>
